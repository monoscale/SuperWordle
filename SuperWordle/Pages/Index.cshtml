@page
@using SuperWordle.Models

@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@for(int i = 0; i < WordleWord.WORD_LENGTH; i++) {
    <input hidden id="hidden-@i" readonly type="text" maxlength="1" max="1"/>
}



@for(int k = 0; k < Model.WordlesToSolve; k++) {
    @for (int i = 0; i < Model.MaximumAttempts; i++) {
        <div class="attempt">
            @for (int j = 0; j < WordleWord.WORD_LENGTH; j++) {
                <input class="cell-@i-@j" data-wordle-id="@k" readonly type="text" maxlength="1" max="1" />
            }
            <br />
        </div>
    }
}

<script src="~/js/superwordle.js"></script>